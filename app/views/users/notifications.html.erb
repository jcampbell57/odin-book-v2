<% unless @new.empty? %>
  <h5 class="modal-title" id="noticeModalLabel"><%= pluralize(@new.size, 'new notification') %></h5>
  <br>
<% else %>
  <h5 class="modal-title" id="noticeModalLabel"><%= pluralize(@all.size, 'previous notification') %></h5>
  <br>
<% end %>

<ul id='notifications-display' class="list-group list-group-flush"></ul>
<%= turbo_frame_tag "pagination", src: notifications_user_path(format: :turbo_stream), loading: :lazy %>

<br>

<%# loading icon %>
<div id='loading-icon' class="d-flex justify-content-center align-items-center">
  <div class="spinner-border text-secondary" role="status">
    <span class="visually-hidden">Loading...</span>
  </div>
</div>

<br><br>
