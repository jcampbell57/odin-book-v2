<%= turbo_stream.append "user-post-display" do %>
  <%= render partial: "posts/post", collection: @posts %>
<% end %>

<% if @pagy.next.present? %>
  <%= turbo_stream.replace "pagination" do %>
    <%= turbo_frame_tag "pagination", src: user_path(@user, page: @pagy.next, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% else %>
  <%= turbo_stream.remove "loading-icon" %>
<% end %>
